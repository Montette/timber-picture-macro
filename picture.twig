{#
{ src, webp = false, class='', lazy_load = false, lazy_image = '', media = ''  }
#}
{% macro source( args )  %}
{% if args.webp %}
<source
    type="image/webp"
    {% if args.media != '' %}
        media="{{ args.media }}"
    {% endif %}
    {% if args.class != '' %}
        class="{{ args.class }}"
    {% endif %}
    {% if args.src != '' and args.lazy_load == false %}
        srcset="{{ args.src|towebp }}"
    {% elseif args.src != '' and args.lazy_load == true %}
        srcset="{{ args.lazy_image|towebp ? args.lazy_image|towebp : '#' }}"
        data-srcset="{{ args.src|towebp }}"
    {% endif %}
/>
{% endif %}
<source
    {% if args.media != '' %}
        media="{{ args.media }}"
    {% endif %}
    {% if args.class != '' %}
        class="{{ args.class }}"
    {% endif %}
    {% if args.src != '' and args.lazy_load == false %}
        srcset="{{ args.src|tojpg }}"
    {% elseif args.src != '' and args.lazy_load == true %}
        srcset="{{ args.lazy_image ? args.lazy_image|tojpg : '#' }}"
        data-srcset="{{ args.src|tojpg }}"
    {% endif %}
/>
{% endmacro %}
{% macro img( args )  %}
{% if args.webp %}
<source
    type="image/webp"
    {% if args.media != '' %}
        media="{{ args.media }}"
    {% endif %}
    {% if args.class != '' %}
        class="{{ args.class }}"
    {% endif %}
    {% if args.src != '' and args.lazy_load == false %}
        srcset="{{ args.src|towebp }}"
    {% elseif args.src != '' and args.lazy_load == true %}
        srcset="{{ args.lazy_image ? args.lazy_image : '#' }}"
        data-srcset="{{ args.src|towebp }}"
    {% endif %}
/>
{% endif %}
<img
    {% if args.media != '' %}
        media="{{ args.media }}"
    {% endif %}
    
    {% if args.class != '' %}
        class="{{ args.class }}"
    {% endif %}

    {% if args.src != '' and args.lazy_load == false %}
        src="{{ args.src|tojpg }}"
    {% elseif args.src != '' and args.lazy_load == true %}
        src="{{ args.lazy_image ? args.lazy_image|tojpg : '#' }}"
        data-src="{{ args.src|tojpg }}"
    {% endif %}
/>
{% endmacro %}
